page{
    height: 100%;
    background-color: #abcdef;
}
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user-avatar{
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
    border-radius: 50%;
}
.user-name{
    margin-top: 100rpx;
    font-size: 32rpx;
    font-weight: bold;
}
.moto{
    line-height: 80rpx;
    font-size: 22rpx;
}
.moto-content{
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    border-radius: 5rpx;
    color: #405f80;
    text-align: center;
    margin-top: 200rpx;
}